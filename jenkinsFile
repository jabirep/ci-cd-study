pipeline {
    agent any

    tools {
        maven 'Maven' // configure in Jenkins global tool config
        jdk 'Java21'  // configure in Jenkins global tool config
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/jabirep/ci-cd-study.git'
            }
        }

        stage('Build & Test') {
            steps {
                sh 'mvn clean test'
            }
        }
    }
}
