pipeline {
    agent any

    tools {
        maven 'Maven' // configure in Jenkins global tool config
        jdk 'Java17'  // configure in Jenkins global tool config
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/<your-username>/selenium-ci-demo.git'
            }
        }

        stage('Build & Test') {
            steps {
                sh 'mvn clean test'
            }
        }
    }

    post {
        always {
            junit '**/target/surefire-reports/*.xml'
        }
    }
}
